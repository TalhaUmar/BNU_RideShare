<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Student ID"
        android:textColorHint="#C0C0C0"
        android:typeface="normal"
        android:layout_marginLeft="@dimen/edittxtmargin"
        android:layout_marginRight="@dimen/edittxtmargin"
        android:background="@drawable/red_field"
        android:textColor="#ffffff"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"

        android:id="@+id/Student_Id"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Password"
        android:textColor="#ffffff"
        android:inputType="textPassword"
        android:textColorHint="#C0C0C0"
        android:typeface="normal"
        android:singleLine="true"
        android:background="@drawable/red_field"
        android:layout_marginLeft="@dimen/edittxtmargin"
        android:layout_marginRight="@dimen/edittxtmargin"
        android:paddingLeft="10dp"
        android:id="@+id/Password"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:background="@drawable/btn"
        android:textColor="#f5f5f5"
        android:textSize="20dp"
        android:layout_marginLeft="@dimen/edittxtmargin"
        android:layout_marginRight="@dimen/edittxtmargin"
        android:layout_marginTop="10dp"
        android:id="@+id/login_button"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New to BNU Ride? Signup Here!"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="@dimen/edittxtmargin"
        android:layout_marginRight="@dimen/edittxtmargin"
        android:layout_marginTop="20dp"
        android:id="@+id/signup_here"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="@dimen/edittxtmargin"
        android:layout_marginRight="@dimen/edittxtmargin"
        android:layout_marginTop="20dp"
        android:id="@+id/forgotpswd"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="@dimen/edittxtmargin"
        android:layout_marginRight="@dimen/edittxtmargin"
        android:layout_marginTop="20dp"
        android:id="@+id/chkapi"
        />



</LinearLayout>