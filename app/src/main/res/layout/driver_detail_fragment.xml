<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="5"
        android:background="@drawable/profile_back">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"

                android:src="@drawable/profile_logo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="User id"
                android:textStyle="bold"
                android:id="@+id/driver_user_name"
                android:textColor="@color/white"
                android:gravity="center"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="User id"
                android:id="@+id/driver_std_id"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                />


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"

        android:padding="15dp"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn"
                android:layout_marginBottom="15dp"
                android:paddingLeft="15dp"
                android:layout_weight="2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Call"
                android:drawableLeft="@drawable/phone_icn"
                android:textColor="@color/white"
                android:id="@+id/driver_call_btn"/>

        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        style="?android:attr/ratingBarStyleSmall"
                        android:progressTint="@color/red"
                        android:progressBackgroundTint="@color/black"
                        android:numStars="5"
                        android:stepSize="1"
                        android:rating="5"

                        android:isIndicator="true"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:text="24 rides"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:id="@+id/five_star_rating"
                        android:textStyle="bold"
                        />

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        style="?android:attr/ratingBarStyleSmall"
                        android:progressTint="@color/red"
                        android:progressBackgroundTint="@color/black"
                        android:numStars="4"
                        android:stepSize="1"
                        android:rating="5"

                        android:isIndicator="true"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:text="24"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:id="@+id/four_star_rating"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        />

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        style="?android:attr/ratingBarStyleSmall"
                        android:progressTint="@color/red"
                        android:progressBackgroundTint="@color/black"
                        android:numStars="3"
                        android:stepSize="1"
                        android:rating="5"

                        android:isIndicator="true"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:text="24"
                        android:textColor="@color/black"
                        android:id="@+id/three_star_rating"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        />

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        style="?android:attr/ratingBarStyleSmall"
                        android:progressTint="@color/red"
                        android:progressBackgroundTint="@color/black"
                        android:numStars="2"
                        android:stepSize="1"
                        android:rating="5"

                        android:isIndicator="true"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:text="24"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:id="@+id/two_star_rating"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        />

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:paddingTop="2dp">
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:progressTint="@color/red"
                        android:progressBackgroundTint="@color/black"
                        android:numStars="1"
                        android:stepSize="1"
                        android:rating="5"

                        android:isIndicator="true"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:text="24"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:id="@+id/one_star_rating"
                        android:textStyle="bold"
                        />

                </LinearLayout>



            </LinearLayout>



        </LinearLayout>





    </LinearLayout>

</LinearLayout>