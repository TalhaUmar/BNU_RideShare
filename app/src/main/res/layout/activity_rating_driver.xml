<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/rate_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate Driver"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/seperator"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M.Talha Umer"
            android:singleLine="true"
            android:textColor="@color/red"
            android:id="@+id/rate_driver_name"
            android:textStyle="bold"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="From : "
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/red"
            android:text="Gulber 3"
            android:id="@+id/rate_driver_source"
            android:textSize="16sp"
            android:layout_weight="2"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="To     : "
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/red"
            android:id="@+id/rate_driver_destination"
            android:text="Beaconhouse"
            android:textSize="16sp"
            android:layout_weight="2"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"

            android:stepSize="1.0" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/submit_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn"
            android:textColor="@color/white"
            android:text="Submit"
            />

    </LinearLayout>






</LinearLayout>